@model DTOLayer.AnnouncementDTOs.AnnouncementAddDTO
@{
    ViewData["Title"] = "AddAnnouncement";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Duyuru Ekleme Sayfası</h1>

<form method="post">
    <label>Duyuru Başlığı</label>
    <input type="text" asp-for="Title" class="form-control mb-2" />
    <span asp-validation-for="Title" class="text-danger"></span>

    <label>Duyuru İçeriği</label>
    <input type="text" asp-for="Content" class="form-control mb-2" />
    <span asp-validation-for="Content" class="text-danger"></span>

    <button type="submit" class="btn btn-primary my-2">Duyuru Oluştur</button>
</form>

