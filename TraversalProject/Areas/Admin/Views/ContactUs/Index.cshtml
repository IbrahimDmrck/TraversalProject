@model List<ContactUs>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Bize Ulaşın Mesajları</h1>
<table class="table table-hover bg-light">
    <thead style="border-bottom:2px solid black;color:black;text-transform:uppercase;">
        <tr>
            <td>#</td>
            <td>Gönderen</td>
            <td>Konu</td>
            <td>Tarih</td>
            <td>Sil</td>
            <td>Mesajı Aç</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>@item.ContactUsID</td>
            <td>@item.Name</td>
            <td>@item.Subject</td>
            <td>@item.MessageDate.ToString("dd.MMM.yyyy")</td>
            <td><a href="#" class="btn btn-danger">Sil</a></td>
            <td><a href="#" class="btn btn-warning">Güncelle</a></td>
        </tr>
        }
    </tbody>
</table>

