@model List<Reservation>
@{
    ViewData["Title"] = "ReservationUser";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}
<!-- Bordered Table -->
<div class="card">
    <h5 class="card-header">Geçmiş Rezervasyonlar</h5>
    <div class="card-body">
        <div class="table-responsive text-nowrap">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Kullanıcı</th>
                        <th>Tur</th>
                        <th>Kişi Sayısı</th>
                        <th>Tarih</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        { count += 1;}
                    <tr>
                        <td>
                            <i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>@count</strong>
                        </td>
                        <td>@item.AppUserId</td>
                        <td>
                            @item.Destination.City
                        </td>
                        <td>
                            @item.PersonCount
                        </td>
                        <td><span class="badge bg-label-primary me-1">@(((DateTime)item.ReservationDate).ToString("dd-MMM-yyyy"))</span></td>
                        <td>     
                            <a class="btn btn-outline-primary" href="#"><i class="bx bx-edit-alt me-1"></i> Detaylar</a>   
                        </td>
                    </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>
<!--/ Bordered Table -->
