@model List<AppUser>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <h5 class="card-header d-inline">
        Kullanıcılar
        <a class="float-end btn btn-success  fw-bolder text-dark" href="/Login/SignUp" target="_blank"><i class="bx bxs-plus-circle me-1"></i>Kullanıcı Ekle</a>
    </h5>
    <div class="table-responsive text-nowrap">
        <table class="table">
            <caption class="ms-4">
                Toplam @ViewBag.TotalUser Kullanıcı Bulundu
            </caption>
            <thead>
                <tr>
                    <th>#</th>
                    <th>Ad Soyad</th>
                    <th>Kullanıcı Adı</th>
                    <th>Mail</th>
                    <th>Fotoğraf</th>
                    <th>Yorumlar</th>
                    <th>Tur Geçmişi</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>@item.Id</strong></td>
                        <td>@item.Name @item.Surname</td>
                        <td>@item.UserName</td>
                        <td>@item.Email</td>
                        <td>
                            <ul class="list-unstyled users-list m-0 avatar-group d-flex align-items-center">
                                <li data-bs-toggle="tooltip"
                                    data-popup="tooltip-custom"
                                    data-bs-placement="top"
                                    class="avatar avatar-xs pull-up"
                                    title="@item.Name @item.Surname">
                                    <img src="~/UserImages/@item.ImageUrl" alt="@item.Name @item.Surname" title="@item.Name @item.Surname" class="rounded-circle" />
                                </li>
                            </ul>
                        </td>
                        <td><a href="/Admin/User/CommentUser/@item.Id" class="badge bg-label-info me-1">Yorumlar</a></td>
                        <td><a href="/Admin/User/ReservationUser/@item.Id" class="badge bg-label-success me-1">Turlar</a></td>
                        <td>
                            <div class="dropdown">
                                <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                    <i class="bx bx-dots-vertical-rounded"></i>
                                </button>
                                <div class="dropdown-menu p-2">
                                    <a class="dropdown-item btn btn-warning my-2" href="/Admin/User/UpdateUser/@item.Id"><i class="bx bx-edit-alt me-1"></i> Düzenle</a>
                                    <a class="dropdown-item btn btn-danger" href="/Admin/User/DeleteUser/@item.Id"><i class="bx bx-trash me-1"></i> Sil</a>
                                </div>
                            </div>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>

