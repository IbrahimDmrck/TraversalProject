@model List<GetAllDestinationQueryResult>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="card">

    <div class="my-3">
        <h5 class="card-header d-inline">Tur Rotaları</h5>
        <a class="float-end btn btn-success  fw-bolder text-dark" href="/Admin/Destination/AddDestination"><i class="bx bxs-plus-circle me-1"></i>Tur Oluştur</a>
    </div>
    <div class="table-responsive text-nowrap">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Şehir</th>
                    <th>GÜn-Gece</th>
                    <th>Fiyat</th>
                    <th>Kapasite</th>
                    <th>Sitede Gör</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody class="table-border-bottom-0">
                @foreach (var item in Model)
                {
                    <tr>
                        <td><strong>@item.id</strong></td>
                        <td><strong>@item.city</strong></td>
                        <td><strong>@item.daynight</strong></td>
                        <td><strong>@item.price</strong></td>
                        <td><span class="badge bg-label-primary me-1">@item.capacity</span></td>
                        <td><a href="/Destination/DestinationDetails/@item.id" target="_blank" class="btn btn-primary"><i class="bx bxs-search me-1"></i>Sitede Gör</a></td>
                        <td>
                            <div class="dropdown">
                                <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                    <i class="bx bx-dots-vertical-rounded"></i>
                                </button>
                                <div class="dropdown-menu px-2">
                                    <a class="dropdown-item btn btn-success my-2" href="javascript:void(0);"><i class="bx bxs-search me-1"></i> Detaylar</a>
                                    <a class="dropdown-item btn btn-warning mb-2" href="/Admin/Destination/UpdateDestination/@item.id"><i class="bx bx-edit-alt me-1"></i> Güncelle</a>
                                    <a class="dropdown-item btn btn-danger mb-2" href="/Admin/Destination/DeleteDestination/@item.id"><i class="bx bx-trash me-1"></i> Sil</a>
                                </div>
                            </div>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>