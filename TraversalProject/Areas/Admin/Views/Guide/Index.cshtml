@model List<Guide>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <h5 class="card-header d-inline">
        Rehber Listesi
        <a class="float-end btn btn-success  fw-bolder text-dark" href="/Admin/Guide/AddGuide" target="_blank"><i class="bx bxs-plus-circle me-1"></i>Rehber Ekle</a>
    </h5>
    <div class="table-responsive text-nowrap">
        <table class="table">
            <caption class="ms-4">
                Toplam @ViewBag.TotalGuide Kullanıcı Bulundu
            </caption>
            <thead>
                <tr>
                    <th>#</th>
                    <th>Görsel</th>
                    <th>Ad Soyad</th>
                    <th>Açıklama</th>
                    <th>Durum</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>@item.GuideID</strong></td>
                        <td>
                            <ul class="list-unstyled users-list m-0 avatar-group d-flex align-items-center">
                                <li data-bs-toggle="tooltip"
                                    data-popup="tooltip-custom"
                                    data-bs-placement="top"
                                    class="avatar avatar-xs pull-up"
                                    title="@item.Name">
                                    <img src="/@item.Image" alt="@item.Name" title="@item.Name" class="rounded-circle" />
                                </li>
                            </ul>
                        </td>
                        <td>@item.Name</td>
                        <td>@item.Description</td>
                        <td>

                            @if (item.Status==true)
                            {
                                <a href="/Admin/Guide/ChangeToFalse/@item.GuideID" class="btn btn-outline-danger me-1">Pasif Yap</a>
                            }
                            else
                            {
                                <a href="/Admin/Guide/ChangeToTrue/@item.GuideID" class="btn btn-outline-success me-1">Aktif Yap</a>
                            }

                        </td>
                        <td>
                            <div class="dropdown">
                                <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                    <i class="bx bx-dots-vertical-rounded"></i>
                                </button>
                                <div class="dropdown-menu p-2">
                                    <a class="dropdown-item btn btn-warning my-2" href="/Admin/Guide/EditGuide/@item.GuideID"><i class="bx bx-edit-alt me-1"></i> Düzenle</a>
                                    <a class="dropdown-item btn btn-danger" href="/Admin/Guide/DeleteGuide/@item.GuideID"><i class="bx bx-trash me-1"></i> Sil</a>
                                </div>
                            </div>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>


